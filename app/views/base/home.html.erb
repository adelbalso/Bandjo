<div id="landingPage">
  <div class="stageLight one">
    <!-- <%= image_tag("stage_light.png") %> -->
  </div>
  <div class="stageLight two">
    <!-- <%= image_tag("stage_light.png") %> -->
  </div>
  <div class="landingPageContent">
    <div class="brand">
      <div class="banjoLogoHead">
        <%= image_tag("banjo_head.png") %>
      </div>
      <h1>bandjo</h1>
      <div class="banjoLogoBody">
        <%= image_tag("banjo_body.png") %>
      </div>
    </div>

    <div class="pitch">
      <p class="fans tagline">Rising bands. <span class="textEmphasis">Various musical genres.</span> Initimate concerts. <span class="textEmphasis">Exclusive community.</span> New York City.</p>
      <p class="bands tagline">Immediate fanbase. <span class="textEmphasis">Regular gigs.</span> Community funding. <span class="textEmphasis">Do what you love.</span> New York City.</p>
    </div>
    <div class="learnMore">
      <a href="#">Learn more >></a>
    </div>

    <div class="learnMoreContent">
      <p class="subHeadline">Ready for the next wave of music discovery? Join Bandjo for a small monthly fee, and you’ll be part of everything below. Launching soon.</p>
      <br>
      <div class="learnMoreWrapper">
        <%= image_tag("spotlightsIcon.png", :alt => "", :class => "learnMoreImg") %>
        <p class="learnMoreCopy">Never worry about who to see or where to go. Get access to frequent, intimate concerts with local bands</p>
      </div>
      <div class="learnMoreWrapper">
        <%= image_tag("supportHeart.png", :alt => "", :class => "learnMoreImg") %>
        <p class="learnMoreCopy">Half of your fee will go directly to the bands on the network, and they’ll be sure to thank you with special tunes and requests at their shows</p>
      </div>
      <%= image_tag("community.png", :alt => "", :class => "learnMoreImg") %>
      <div class="learnMoreWrapper">
        <p class="learnMoreCopy">Support all the bands on the network from the start, and be part of their rise to fame and glory</p>
      </div>
    </div>
  </div>

  <div class="callToAction">
    <input class="tunesLink" type="text" placeholder="link to your tunes">
    <input type="email" placeholder="john@email.com">
    <button class="fansCTA">Sounds cool, I'm in</button>
    <button class="bandsCTA">Sounds cool, I'm in</button>
  </div>

  <div class="player">
    <div class="playerControl prev">
    </div>
    <iframe id="sc-widget" width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=http%3A%2F%2Fapi.soundcloud.com%2Fplaylists%2F7794254&show_artwork=false&show_comments=false&show_playcount=false&sharing=false&liking=false&buying=false&color=3e1d56&themer=3e1d56&auto_play=false&download=false"></iframe>
    <div class="playerControl next">
    </div>
  </div>

  <div class="player overlay"></div>
</div>
<div class="thanksText" style="display:none;">Thank you!<br>We'll get back to you shortly.</div>


<script type="text/JavaScript">

  var iframeElement   = document.querySelector('iframe');
  var iframeElementID = iframeElement.id;
  var widget1         = SC.Widget(iframeElement);
  var widget2         = SC.Widget(iframeElementID);
  // widget1 === widget2

  $(".next").click(function() {
    widget1.next()
  })

  $(".prev").click(function() {
    widget1.prev()
  })  

  $(".bandsLink").click(function() {
    $(this).fadeOut(300);
    $(".tunesLink").animate({"opacity": 1},300)
    $(".fansLink").delay(300).fadeIn(300).css({"display":"inline"});
    $(".fans.tagline").fadeOut(300);
    $(".bands.tagline").delay(300).fadeIn(300);
    $(".fansCTA").hide()
    $(".bandsCTA").show()
  });

  $(".fansLink").click(function() {
    $(this).fadeOut(300);
    $(".tunesLink").animate({"opacity": 0},300)
    $(".bandsLink").delay(300).fadeIn(300)
    $(".bands.tagline").fadeOut(300);
    $(".fans.tagline").delay(300).fadeIn(300);
    $(".bandsCTA").hide()
    $(".fansCTA").show()
  });

  $(".learnMore a").click(function() {
    $(this).fadeOut(300)
    $(".pitch").fadeOut(300)
    $(".learnMoreContent").delay(300).fadeIn(300)
  })

  $("a.discover").click(function() {
    $(".player.overlay").fadeIn(150)
    $(".player.overlay").fadeOut(300)
    widget1.next()
  })

  $("#putTheWidgetHere").hide();

  $(".callToAction button").click(function() {
    $("#landingPage").fadeOut(300);
    $(".thanksText").fadeIn(300);
  })

  $(".player").delay(300).animate({
    "height": "125px"
  },300)

  $(".player img").delay(600).animate({
    "opacity": 1
  },300)

</script>